{
  "variables": {
    "app_version": "HEAD",
    "aws_access_key": "",
    "aws_secret_key": ""
  },
  "builders": [{
    "type": "amazon-ebs",
    "access_key": "{{user `aws_access_key`}}",
    "secret_key": "{{user `aws_secret_key`}}",
    "region": "eu-west-1",
    "source_ami": "ami-f95ef58a",
    "instance_type": "t2.small",
    "ssh_username": "ubuntu",
    "ami_name": "notes-web_{{ timestamp }}_{{ user `app_version` }}",
    "tags": {
      "app_version": "{{ user `app_version` }}"
    }
  }],
  "provisioners": [
    {
      "type": "ansible",
      "groups": "web",
      "playbook_file": "ansible/site.yml",
      "extra_arguments": [
        "--extra-vars",
        "app_version={{ user `app_version` }}"
      ]
    }
  ]
}
